<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.file_field :image do |i| %><br>
      <div data-index="<%= i.index %>" class="js-file-froup" >
  </div>


  <div class="field">
    <%= form.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "--", class: 'input' %><br>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
